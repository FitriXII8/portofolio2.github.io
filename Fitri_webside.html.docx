        function changeTestimonial(direction) {
            const slides = document.getElementById('testimonialSlides');
            if (!slides) return;

            const totalSlides = slides.children.length;
            currentTestimonialIndex += direction;

            if (currentTestimonialIndex >= totalSlides) {
                currentTestimonialIndex = 0;
            } else if (currentTestimonialIndex < 0) {
                currentTestimonialIndex = totalSlides - 1;
            }

            slides.style.transform = `translateX(-${currentTestimonialIndex * 100}%)`;
        }

        function updateStarRating(rating) {
            document.querySelectorAll('#starRating i').forEach((star, index) => {
                if (index < rating) {
                    star.classList.remove('text-gray-300');
                    star.classList.add('text-yellow-400');
                } else {
                    star.classList.remove('text-yellow-400');
                    star.classList.add('text-gray-300');
                }
            });
        }

        async function handleContactSubmit(e) {
            e.preventDefault();
            
            if (currentRecordCount >= 999) {
                showToast("Maaf, batas maksimum 999 pesan telah tercapai. Silakan hubungi kami melalui telepon.", "error");
                return;
            }

            const formData = {
                id: Date.now().toString(),
                name: document.getElementById('contactName').value,
                email: document.getElementById('contactEmail').value,
                destination: document.getElementById('contactDestination').value,
                message: document.getElementById('contactMessage').value,
                type: 'contact',
                created_at: new Date().toISOString()
            };

            const submitBtn = e.target.querySelector('button[type="submit"]');
            const originalText = submitBtn.textContent;
            submitBtn.textContent = 'Mengirim...';
            submitBtn.disabled = true;

            try {
                if (window.dataSdk) {
                    const result = await window.dataSdk.create(formData);
                    if (result.isOk) {
                        showToast("Pesan berhasil dikirim! Terima kasih atas feedback Anda.", "success");
                        e.target.reset();
                    } else {
                        showToast("Gagal mengirim pesan. Silakan coba lagi.", "error");
                    }
                } else {
                    showToast("Pesan berhasil dikirim! Terima kasih atas feedback Anda.", "success");
                    e.target.reset();
                }
            } catch (error) {
                showToast("Terjadi kesalahan. Silakan coba lagi.", "error");
            } finally {
                submitBtn.textContent = originalText;
                submitBtn.disabled = false;
            }
        }

